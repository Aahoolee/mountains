extends ../main.layout.pug

block variables
    - var title = 'Мои работы';

block scripts
    script(src='works.bundle.js')

block content
    section.hero
        -
            var socials__list = [
            ['https://vk.com/aimeethanatogenos', 'vk'],
            ['https://github.com/Aahoolee', 'github'],
            ['https://t.me/ankanka', 'telegram_logo']
            ]
        .hero__socials.socials
            ul.socials__list.socials__list--hero
                each item in socials__list
                    li.socials__item
                        a(href=`${item[0]}`, target="_blank").socials__link.socials__link--hero
                            +icon(item[1], 'socials__svg socials__svg--hero')
        .hero__menu
            a(href="").hamburger
                svg.hamburger__svg
                    use(xlink:href="assets/images/icons/sprite.svg#hamburger")

        .hero__title
            .section-title
                img(src="", alt="").section-title__pic

            .user.hero__user
                .user__pic
                    img.user__pic-img
                .user__description
                    .user__name Анна Никитина
                    .user__info Личный сайт веб-разработчика

        a(href="").down-btn.hero__down-btns
            svg.arrowdown__svg
                use(xlink:href="assets/images/icons/sprite.svg#arrow_down")

    section.slider

        .slider__block
            .slider__title
                .block-title Мои работы
            .slider__desc
                .block-subtitle Сайт коворкинга
                .slider__desc--skills HTML, CSS
                a(href="https://aahoolee.github.io/workadium/").slider__desc--btn Посмотреть сайт

            .slider__sites-active
            //.slider__sites--unactive
            .slider__sites-down
                svg.arrowdown__svg
                    use(xlink:href="assets/images/icons/sprite.svg#arrow_down")
            .slider__sites-up
                svg.arrowdown__svg
                    use(xlink:href="assets/images/icons/sprite.svg#arrow_up")


    section.reviews
        .reviews__title
            .block-title Что обо мне говорят
        ul.reviews__list
            li.reviews__item
                h1.reviews__item--quote 
                p.reviews__item--text Этот парень проходил обучение веб-разработке не где-то, а в LoftSchool! 2 месяца только самых тяжелых испытаний и бессонных ночей!
                .reviews__item--author
                    .reviews__item--pic
                        img(src="assets/images/content/reviews1.jpg", alt="Ковальчук Дмитрий").reviews__item--ava
                    .reviews__item--person
                        .reviews__item--name Дмитрий Ковальчук
                        .reviews__item--prof Основатель школы LoftSchool
            li.reviews__item
                h1.reviews__item--quote 
                p.reviews__item--text Этот парень проходил обучение веб-разработке не где-то, а в LoftSchool! 2 месяца только самых тяжелых испытаний и бессонных ночей!
                .reviews__item--author
                    .reviews__item--pic
                        img(src="assets/images/content/reviews2.jpg", alt="Сабанцев Вова").reviews__item--ava
                    .reviews__item--person
                        .reviews__item--name Вова Сабанцев
                        .reviews__item--prof Преподаватель школы


        .contacts__form
            .contacts__blur-bg
            .contacts__form--blur
                .contacts__title
                    .block-subtitle Связаться со мной
                label.form__block(for='user-name')
                    .form__title
                    input#user-name.form__input(name='user-name', type='text', placeholder="Имя")
                label.form__block(for='user-email')
                    .form__title
                    input#user-email.form__input(name='user-email', type='text', placeholder="E-mail")
                label.form__block(for='user-message')
                    .form__title
                    textarea#user-message.form__input.form__input--message(name='user-message', rows='6', placeholder="Сообщение")
                .form__btn
                    .send__btn
                        button.send-btn(type='submit') Отправить
                    .send__reset
                        button.send-reset(type='reset') Очистить

        .arrow__up

            a(href="").up-btn
                svg.arrowdown__svg
                    use(xlink:href="assets/images/icons/sprite.svg#arrow_down")

